SELECT userCollections.UserID, userCollections.CollectionID, products.ProductID, Name, ReleaseDate, ImagePath, LanguageName, Brief, Description, EAN13, PublisherName FROM userCollections
LEFT JOIN collectionProducts
ON userCollections.CollectionID = collectionProducts.CollectionID
LEFT JOIN products
ON collectionProducts.ProductID = products.ProductID
LEFT JOIN languages
ON languages.LanguageID = products.LanguageID
LEFT JOIN publishers
ON publishers.PublisherID = publishers.PublisherID
WHERE userCollections.UserID = 1
ORDER BY userCollections.CollectionID ASC, collectionProducts.ProductID ASC;